elifePipeline {
    def commit
    stage 'Checkout approved', {
        checkout scm
        commit = elifeGitRevision()
    }

    stage 'Deploy to prod', {
        elifeDeploySlackNotification 'reviewer-suggestions', 'prod'
        builderDeployRevision 'reviewer-suggestions--prod', commit
        builderSmokeTests 'reviewer-suggestions--prod', '/srv/reviewer-suggestions'
    }
}
